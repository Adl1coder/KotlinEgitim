                        android:text="GERİ DÖNÜŞÜME KATKI SAĞLA"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#FFFAFA"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/productPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#E92D1035"
                        android:drawableTint="#FFFFFF"
                        android:foregroundTint="#FFFFFF"
                        android:text="30.000"
                        android:textColor="#EFE7E7"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buyButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Şimdi Satın Al"
                    android:textColorHighlight="#FDD835"
                    android:textColorLink="#404040" />

            </LinearLayout>
            <!-- Ürün 3 -->
