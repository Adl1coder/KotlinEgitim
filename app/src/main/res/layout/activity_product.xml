                        android:text="OYUNCU KULAKLIĞI"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="#FFFAFA"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/productPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#E92D1035"
                        android:drawableTint="#FFFFFF"
                        android:foregroundTint="#FFFFFF"
                        android:text="1.500"
                        android:textColor="#EFE7E7"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/buyButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Şimdi Satın Al"
                    android:textColorHighlight="#FDD835"
                    android:textColorLink="#404040" />

            </LinearLayout>
            <!-- Ürün 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
